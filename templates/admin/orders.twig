{% extends 'main.twig' %}

{% block title %}
  Products catalog
{% endblock %}

{% block content %}
  <h2>
    Заказы пользователей
  </h2>
  <table class="table">
    <thead>
      <tr>
        <th>
          Номер
        </th>
        <th>
          Статус
        </th>
        <th>
          Сумма
        </th>
        <th>
          Кол-во позиций
        </th>
      </tr>
    </thead>
    <tbody>
      {% for order in orders %}
        <tr>
          <td>
            <a href="/?c=admin&a=viewOrder&id={{ order.id }}">{{ order.id }}</a>
          </td>
          <td>
            {{ order.getStatusText() }}
          </td>
          <td>
            {{ order.getTotalPrice() }} руб.
          </td>
          <td>
            {{ order.getCount() }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
